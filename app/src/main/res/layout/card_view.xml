<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#767B97"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginStart="8dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">





            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Logged in as:"
                android:textSize="18sp"
                android:textColor="@color/white"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="match_parent"
                android:text="Tbvcsoft@gmail.com"
                android:textSize="15sp"
                android:textColor="#D1491F"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="15dp"
                android:layout_height="match_parent"
                android:text="Pro Member"
                android:textSize="15sp"
                android:textColor="#C58D3C"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="match_parent"
                android:text="see pro features"
                android:textSize="15sp"
                android:textColor="@color/white"
                />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#17D540"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/arrow_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:background="@drawable/plusbutonaroundcorner"
                    android:padding="5dp"
                    android:src="@drawable/right_arrow" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingStart="10dp"
                    android:text="Account Preference"
                    android:textColor="@color/colorWhite"
                    android:textSize="20sp">

                </TextView>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/hidden_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/tv_currencySymbol"

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:layout_weight="1"
                        android:paddingStart="20dp"
                        android:text="Currency symbol"
                        android:textColor="@color/colorWhite"
                        android:textSize="14sp" />

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="7dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/inputround"
                        android:weightSum="1"

                        >

                        <AutoCompleteTextView
                            android:id="@+id/actv_currencySymbol"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:background="@drawable/inputround"
                            android:inputType="none"
                            android:paddingStart="10dp"
                            android:paddingTop="0dp"
                            android:paddingBottom="0dp"
                            android:textColor="@android:color/holo_red_light"
                            android:textSize="14sp"
                            android:textStyle="bold" />


                    </com.google.android.material.textfield.TextInputLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/tv_debtCardDetails"

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:layout_weight="1"
                        android:paddingStart="20dp"
                        android:text="Debt card details"
                        android:textColor="@color/colorWhite"
                        android:textSize="14sp" />

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="7dp"
                        android:layout_weight="0.8"
                        android:background="@drawable/inputround"
                        android:weightSum="1">

                        <AutoCompleteTextView
                            android:id="@+id/actv_debtCardDetails"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/inputround"
                            android:inputType="none"
                            android:paddingStart="10dp"
                            android:paddingTop="0dp"
                            android:paddingBottom="0dp"

                            android:textSize="14sp"
                            android:textStyle="bold" />


                    </com.google.android.material.textfield.TextInputLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/tv_debtCardGraphic"

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:layout_weight="1"
                        android:paddingStart="20dp"
                        android:text="Debt card graphic"
                        android:textColor="@color/colorWhite"
                        android:textSize="14sp" />

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="7dp"
                        android:layout_weight="0.8"
                        android:background="@drawable/inputround"
                        android:weightSum="1">

                        <AutoCompleteTextView
                            android:id="@+id/actv_debtCardgraphic"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/inputround"
                            android:inputType="none"
                            android:paddingStart="10dp"
                            android:paddingTop="0dp"
                            android:paddingBottom="0dp"
                            android:textSize="14sp"
                            android:textStyle="bold" />


                    </com.google.android.material.textfield.TextInputLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    >

                    <TextView
                        android:id="@+id/weeklySummaryEmail"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"

                        android:paddingStart="20dp"
                        android:text="Weekly Summary Emails"
                        android:textColor="@color/colorWhite"
                        android:textSize="14sp" />

                    <CheckBox
                        android:id="@+id/checkBox2"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10dp"

                        android:layout_marginTop="7dp"
                        android:background="@color/white" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/yesbutton"
                        android:paddingStart="10dp"
                        android:paddingTop="0dp"

                        android:paddingEnd="10dp"
                        android:paddingBottom="0dp"
                        android:text="Save Preferences"
                        android:textColor="@color/white"
                        app:rippleColor="#3F51B5" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:background="#17D540"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/arrow_button2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:background="@drawable/plusbutonaroundcorner"
                    android:padding="5dp"
                    android:src="@drawable/right_arrow" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingStart="10dp"
                    android:text="Logout"

                    android:textColor="@color/colorWhite"
                    android:textSize="20sp">

                </TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/hidden_view2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:visibility="gone">

                <Button
                    android:id="@+id/logout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/yesbutton"
                    android:paddingStart="10dp"
                    android:paddingTop="0dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="0dp"
                    android:text="Logout"
                    android:textColor="@color/white"
                    app:rippleColor="#3F51B5" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:background="#17D540"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/arrow_button3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:background="@drawable/plusbutonaroundcorner"
                    android:padding="5dp"
                    android:src="@drawable/right_arrow" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingStart="10dp"
                    android:text="Change Password"
                    android:textColor="@color/colorWhite"
                    android:textSize="20sp">

                </TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/hidden_view3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:visibility="gone">


                <EditText
                    android:id="@+id/editTextTextPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:ems="10"
                    android:hint="Current Password"
                    android:inputType="textPassword"
                    android:textColorHint="@color/colorWhite" />

                <EditText
                    android:id="@+id/editTextTextPassword2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:ems="10"
                    android:hint="New Password"
                    android:inputType="textPassword"
                    android:textColorHint="@color/colorWhite" />

                <EditText
                    android:id="@+id/editTextTextPassword3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:ems="10"
                    android:hint="Confirm New Password"
                    android:inputType="textPassword"
                    android:textColorHint="@color/colorWhite" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:background="#17D540"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/arrow_button4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:background="@drawable/plusbutonaroundcorner"
                    android:padding="5dp"
                    android:src="@drawable/right_arrow" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_gravity="center_vertical"
                    android:paddingStart="10dp"
                    android:text="Delete Account"
                    android:textColor="@color/colorWhite"
                    android:textSize="20sp">

                </TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/hidden_view4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:visibility="gone">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/nobutton"
                    android:paddingStart="10dp"
                    android:paddingTop="0dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="0dp"
                    android:text="Confirm Deletion"
                    android:textColor="@color/white"
                    app:rippleColor="@android:color/holo_red_light" />

            </LinearLayout>

            <Button
                android:id="@+id/close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="center"
                android:layout_marginTop="300dp"

                android:layout_marginBottom="100dp"
                android:text="Close" />



        </LinearLayout>
    </ScrollView>
</LinearLayout>