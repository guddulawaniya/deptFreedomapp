<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="100dp"
    android:background="#4F5151"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#17D540"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/arrow_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/right_arrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingStart="10dp"
            android:text="Account Preference"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"
            >

        </TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/hidden_view"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/tv_currencySymbol"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_weight="1"
                android:paddingStart="20dp"
                android:text="Currency symbol"
                android:textColor="@color/colorWhite"
                android:textSize="14sp" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginTop="7dp"
                android:layout_weight="0.5"
                android:background="@drawable/inputround"
                android:weightSum="1"

                >

                <AutoCompleteTextView
                    android:id="@+id/actv_currencySymbol"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:inputType="none"
                    android:paddingStart="10dp"
                    android:paddingTop="0dp"
                    android:paddingBottom="0dp"
                    android:textColor="@android:color/holo_red_light"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:background="@drawable/inputround"
                    />


            </com.google.android.material.textfield.TextInputLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/tv_debtCardDetails"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_weight="1"
                android:paddingStart="20dp"
                android:text="Debt card details"
                android:textColor="@color/colorWhite"
                android:textSize="14sp" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginTop="7dp"
                android:layout_weight="0.8"
                android:background="@drawable/inputround"
                android:weightSum="1">

                <AutoCompleteTextView
                    android:id="@+id/actv_debtCardDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/inputround"
                    android:inputType="none"
                    android:paddingStart="10dp"
                    android:paddingTop="0dp"
                    android:paddingBottom="0dp"

                    android:textSize="14sp"
                    android:textStyle="bold" />


            </com.google.android.material.textfield.TextInputLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/tv_debtCardGraphic"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_weight="1"
                android:paddingStart="20dp"
                android:text="Debt card graphic"
                android:textColor="@color/colorWhite"
                android:textSize="14sp" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginTop="7dp"
                android:layout_weight="0.8"
                android:background="@drawable/inputround"
                android:weightSum="1">

                <AutoCompleteTextView
                    android:id="@+id/actv_debtCardgraphic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/inputround"
                    android:inputType="none"
                    android:paddingStart="10dp"
                    android:paddingTop="0dp"
                    android:paddingBottom="0dp"
                    android:textSize="14sp"
                    android:textStyle="bold" />


            </com.google.android.material.textfield.TextInputLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >
            <TextView
                android:id="@+id/weeklySummaryEmail"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"

                android:paddingStart="20dp"
                android:text="Weekly Summary Emails"
                android:textColor="@color/colorWhite"
                android:textSize="14sp" />

            <CheckBox
                android:id="@+id/checkBox2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"

                android:layout_marginTop="7dp"
                android:background="@color/white"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="#3F51B5"
                android:paddingStart="10dp"
                android:paddingTop="0dp"

                android:paddingEnd="10dp"
                android:paddingBottom="0dp"
                android:text="Save Preferences"
                android:textColor="@color/white"
                app:rippleColor="#3F51B5" />

        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#17D540"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/arrow_button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/right_arrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingStart="10dp"
            android:text="Logout"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"
            >

        </TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/hidden_view2"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        >

        <Button
            android:id="@+id/logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="#3F51B5"
            android:paddingStart="10dp"
            android:paddingTop="0dp"
            android:paddingEnd="10dp"
            android:paddingBottom="0dp"
            android:text="Logout"
            android:textColor="@color/white"
            app:rippleColor="#3F51B5" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#17D540"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/arrow_button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/right_arrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingStart="10dp"
            android:text="Change Password"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"
            >

        </TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/hidden_view3"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        >


        <EditText
            android:id="@+id/editTextTextPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:ems="10"
            android:hint="Current Password"
            android:inputType="textPassword"
            android:textColorHint="@color/colorWhite" />

        <EditText
            android:id="@+id/editTextTextPassword2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:ems="10"
            android:hint="New Password"
            android:inputType="textPassword"
            android:textColorHint="@color/colorWhite" />

        <EditText
            android:id="@+id/editTextTextPassword3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:ems="10"
            android:hint="Confirm New Password"
            android:inputType="textPassword"
            android:textColorHint="@color/colorWhite" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#17D540"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/arrow_button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/right_arrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingStart="10dp"
            android:text="Delete Account"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"
            >

        </TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/hidden_view4"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/holo_red_light"
            android:paddingStart="10dp"
            android:paddingTop="0dp"
            android:paddingEnd="10dp"
            android:paddingBottom="0dp"
            android:text="Confirm Deletion"
            android:textColor="@color/white"
            app:rippleColor="@android:color/holo_red_light" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Close"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>